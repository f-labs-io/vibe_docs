{
    "tool_id": "search_web",
    "description": "Search the web for current information",
    "type": "function",
    "input_schema": {
        "type": "object",
        "properties": {
            "query": {
                "type": "string",
                "description": "The search query"
            },
            "summarize": {
                "type": "boolean",
                "description": "Whether to summarize results",
                "default": true
            }
        },
        "required": ["query"]
    },
    "output_schema": {
        "type": "object",
        "properties": {
            "answer": {"type": "string"},
            "results": {"type": "array"}
        }
    }
}
